<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView android:id="@+id/dateLabel" 
    	android:layout_width="fill_parent" android:layout_height="wrap_content" 
    	android:textColor="#ffffffff" android:text="Send To"></TextView>
    <Spinner android:id="@+id/emailSpinner" android:layout_height="wrap_content" android:layout_width="match_parent"></Spinner>
    
    <TextView android:id="@+id/dateLabel" 
    	android:layout_width="fill_parent" android:layout_height="wrap_content" 
    	android:textColor="#ffffffff" android:text="From Date"></TextView>
    
    <Button android:id="@+id/pickDate"
    	android:layout_height="wrap_content" android:textSize="30sp" 
    	android:layout_width="fill_parent" android:background="@drawable/date_button" 
    	style="@style/ButtonText" android:text="Setted date"></Button>
				
    <TextView android:id="@+id/blankLabel" 
    	android:layout_width="fill_parent" android:layout_height="wrap_content" 
    	android:text=" "></TextView>
    	    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	   	android:orientation="horizontal"
	   	android:layout_width="fill_parent"
	   	android:layout_height="wrap_content"
	   	android:id="@+id/buttonLayout"
	   	style="@android:style/ButtonBar">
	   	
		<Button android:id="@+id/sendButton" 
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_weight="1" android:text="Send" />
	</LinearLayout>
    
    <TextView android:id="@+id/listLabel" 
    	android:layout_width="wrap_content" android:layout_height="wrap_content" 
    	android:textColor="#ffffffff" android:text="Run Logs to Share"></TextView>
    	
    <ListView android:id="@+id/shareLengthlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>